{
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNext",
    "module": "System",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["index.ts"],
  "exclude": ["node_modules"]
}
